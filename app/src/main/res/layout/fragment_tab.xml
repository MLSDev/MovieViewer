<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.tabs.TabFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/contentTabLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/tabLayoutColor"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/darkGrey" />

    <com.shykun.volodymyr.movieviewer.presentation.tabs.NonSwipeableViewPager
        android:id="@+id/contentViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>